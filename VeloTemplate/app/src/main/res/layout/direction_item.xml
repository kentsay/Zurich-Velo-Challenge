<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:weightSum="1"
    android:background="#dcdcdc">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:elevation="3dp" >

        <ImageView
            android:id="@+id/direction_indicator"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/direction_info"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/direction_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Direction info"
            android:textSize="11sp"
            android:textColor="#289AF0"
            android:layout_marginLeft="5dp"
            android:typeface="normal"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/direction_summary" />

        <TextView
            android:id="@+id/direction_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Direction summary"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:textColor="#414C54"
            android:textAlignment="textEnd"
            android:typeface="monospace"
            android:layout_alignBottom="@+id/direction_indicator"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</FrameLayout>